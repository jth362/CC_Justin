//A canvas size of 1080x720
//At least 5 primitives (can be the same shape or different shapes)
//Variation in stroke weight and fill color
//A Title for the drawing
size(1080, 720);

//circle0
int c8=800;
strokeWeight(5);
fill(175, 175, 175);
ellipse(900, 720, c8, c8);

 for (int i = 0; i <20; i = i +1){
   fill(175, 175, 175);
   stroke(0,0,0);
   c8 = c8-35;
   ellipse(900, 720, c8, c8);
 }

